<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GraphVisualization.FXFiles.MainWindowController"
            prefHeight="1000.0" prefWidth="1500.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>
    <top>
        <MenuBar onKeyPressed="#handleKeyboardInput">
            <Menu text="File">
                <MenuItem fx:id="resetBoard" onAction="#resetBoard" text="Reset board" />
                <MenuItem fx:id="exit" onAction="#exit" text="Exit" />
            </Menu>
            <Menu text="Settings">
                <MenuItem text="foo" />
                <MenuItem text="bar" />
                <MenuItem text="baz" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <BorderPane prefHeight="800" prefWidth="400" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
            </padding>
            <top>
                <GridPane prefHeight="40" prefWidth="Infinity" hgap="10" vgap="5">
                    <padding>
                        <Insets left="10.0" right ="10.0" bottom="10.0"/>
                    </padding>
                    <Text id="label-count-of-ones" text="Contiguous ones found: "
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="0" />
                    <Text id="label-shortest-path-solution" text="Shortest Complete Path: "
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="1" />
                    <Text id="text-shortest-path-solution"

                          fx:id="outputCountOfContOnes"
                          accessibleText="outputCountOfContOnes"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="0" />
                    <Text id="text-count-of-ones"
                          fx:id="shortestCompletePathLen"
                          accessibleText="shortestCompletePathLen"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="1" />

                </GridPane>
            </top>
            <center>
                <GridPane fx:id="board" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"/>
            </center>
        </BorderPane>
    </center>

    <!-- Tells JavaFX to use our css file -->
    <stylesheets>
        <URL value="@main_window.css" />
    </stylesheets>
</BorderPane>
